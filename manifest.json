{
  "manifest_version": 3,
  "name": "NotebookChrome",
  "version": "1.0.0",
  "description": "Save tweets and threads directly from Twitter",
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [{
    "resources": ["src/app/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 